#include<iostream>
using namespace std;

int printarray(int arr[],int size){
    cout<<"printing the array : " <<endl;
    for (int  i = 0; i < size; i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<"printing done"<<endl;

    
}
int main(){
    int n=4;
   int number[4]={4,5,3,5};
   printarray(number,n);
   for (int i = 0; i < n; i++)
   {
       cout<<number[i]<<" ";
   }

   // finding size of array:
   int numbersize=sizeof(number)/sizeof(int);
   cout<<endl<<"size of number is:" <<numbersize<<endl;
   
   return 0;
}
